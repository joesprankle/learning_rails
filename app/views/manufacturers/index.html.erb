<h1>Manufacturers</h1>
<%= link_to 'New Product', new_manufacturer_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @mfg.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to 'Show', manufacturer_path(product) %></td>
        <td><%= link_to 'Edit', edit_manufacturer_path(product) %></td>
        <td><%= link_to 'Destroy', manufacturer_path(product),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>