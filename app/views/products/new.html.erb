<%= form_for :product, url: products_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :desc %>
    </p>
    <%= f.select(:manufacturer_id, @manufacturers.all.collect {|a| [a.name, a.id]}) -%>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', products_path %>