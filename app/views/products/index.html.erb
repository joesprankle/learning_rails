
<h1>Listing articles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.desc %></td>
        <td><%= link_to 'Show', product_path(product) %></td>
      </tr>
  <% end %>
</table>